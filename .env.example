# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cortex_orchestrator

# API Server (runs on localhost, nginx proxies to it)
# Use 127.0.0.1 when behind nginx for security
API_HOST=127.0.0.1
API_PORT=8100
API_RELOAD=false

# SSL/TLS (not needed - nginx handles SSL)
# Leave empty when using nginx reverse proxy
SSL_CERT_FILE=
SSL_KEY_FILE=

# Docker Swarm
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=insurance-network

# Instance Configuration
INSTANCE_IMAGE=bre-payments:latest
INSTANCE_DATABASE_URL=postgresql://user:password@localhost:5432/bre_payments
INSTANCE_PLATFORM_API_URL=https://api.platform.integrations.habit.io
INSTANCE_PLATFORM_API_KEY=your-platform-api-key
INSTANCE_MQTT_BROKER=mqtt://localhost:1883
INSTANCE_REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
